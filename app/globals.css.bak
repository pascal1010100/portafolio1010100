@keyframes glitch {
  0% { transform: translate(0, 0); opacity: 1; }
  20% { transform: translate(-0.5px, 0.5px); }
  40% { transform: translate(-1px, -0.5px); }
  60% { transform: translate(0.5px, -1px); }
  80% { transform: translate(1px, 0.5px); }
  100% { transform: translate(0, 0); opacity: 1; }
}

@layer utilities {
  .glitch {
    animation: glitch 2s infinite ease-in-out;
  }

  .glitch-layer {
    animation: glitch 2s infinite reverse ease-in-out;
    pointer-events: none;
  }

  .neon-glow {
    filter: drop-shadow(0 0 4px #00fff7) drop-shadow(0 0 8px #00fff7);
    transition: all 0.3s ease-in-out;
  }