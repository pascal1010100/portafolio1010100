@layer base {
  /* Estilos base */
  * {
    @apply border-border;
  }
  
  body {
    @apply bg-background text-foreground antialiased;
    font-feature-settings: "rlig" 1, "calt" 1;
  }
  
  /* Scrollbar personalizada */
  ::-webkit-scrollbar {
    @apply w-2 h-2;
  }
  
  ::-webkit-scrollbar-track {
    @apply bg-background;
  }
  
  ::-webkit-scrollbar-thumb {
    @apply bg-muted-foreground/30 rounded-full hover:bg-muted-foreground/50 transition-colors;
  }
  
  /* Selecci√≥n de texto */
  ::selection {
    @apply bg-primary/20 text-primary;
  }
  
  /* Placeholder */
  ::placeholder {
    @apply text-muted-foreground/60;
  }
  
  /* Focus visible */
  :focus-visible {
    @apply outline-none ring-2 ring-ring ring-offset-2 ring-offset-background;
  }
  
  /* Animaciones */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  @keyframes slideUp {
    from { transform: translateY(20px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }
  
  @keyframes scaleIn {
    from { transform: scale(0.95); opacity: 0; }
    to { transform: scale(1); opacity: 1; }
  }

/* Utilidades personalizadas */
@layer utilities {
  /* Texto con equilibrio */
  .text-balance {
    text-wrap: balance;
  }
  
  /* Gradientes */
  .bg-gradient-primary {
    @apply bg-gradient-to-r from-primary/80 via-primary to-primary/80;
  }
  
  .bg-gradient-secondary {
    @apply bg-gradient-to-r from-secondary/80 via-secondary to-secondary/80;
  }
  
  /* Efectos de vidrio */
  .glass {
    @apply bg-background/80 backdrop-blur-lg border border-border/50 shadow-lg;
  }
  
  /* Animaciones */
  .animate-fade-in {
    animation: fadeIn 0.5s ease-out forwards;
  }
  
  .animate-slide-up {
    animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }
  
  .animate-scale-in {
    animation: scaleIn 0.5s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }
  
  /* Efecto de brillo */
  .shine {
    position: relative;
    overflow: hidden;
  }
  
  .shine::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      to bottom right,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 0) 30%,
      rgba(255, 255, 255, 0.1) 45%,
      rgba(255, 255, 255, 0.3) 50%,
      rgba(255, 255, 255, 0.1) 55%,
      rgba(255, 255, 255, 0) 70%,
      rgba(255, 255, 255, 0) 100%
    );
    transform: rotate(30deg);
    pointer-events: none;
    transition: all 0.5s ease;
    opacity: 0;
  }
  
  .shine:hover::after {
    opacity: 1;
    left: 100%;
  }
}

